<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ModuloConversacionalActivity"
    tools:ignore="MissingClass"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="150dp">

        <Button
            android:id="@+id/botonPruebaSanbot"
            android:layout_width="530dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/button_rounded"
            android:drawablePadding="8dp"
            android:padding="10dp"
            android:text="Tutorial"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/botonPruebaOpenAI"
            android:layout_width="532dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/button_rounded"
            android:drawablePadding="8dp"
            android:padding="10dp"
            android:text="Interacción con Persona"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/botonInteracRobot"
            android:layout_width="535dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/button_rounded"
            android:drawablePadding="8dp"
            android:padding="10dp"
            android:text="Interacción con Robot"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>